<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<nav class="navbar navbar-expand-sm navbar-light bg-light">
	<a class="navbar-brand" href="/">Doctor's</a>
	<button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
			aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="collapsibleNavId">
		<ul class="navbar-nav ml-auto mt-2 mt-lg-0">
			<li class="nav-item">
				<%=
					link_to_if(current_user.nil?, "Login", sign_in_path, class: 'btn btn-primary') do
						link_to('Sign out',  destroy_user_session_path, :method => 'delete', class: 'btn btn-danger')
					end
				%>
			</li>
		</ul>
	</div>
</nav>
<section class="text-center m-5">
	<h1 class="text-center" >Welcome To Basic Rails 6 Auth</h1>
	<p>Rails 6 auth using devise</p>
	<% if current_user %>
			<h5><%= current_user.email %></h5>
	<%end%>
	
</section>
<div id='r-container'>
</div>